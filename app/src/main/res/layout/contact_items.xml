<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/secondaryColor">

    <ImageView
        android:id="@+id/contactImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/contact_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/contactNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/contactImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/contactImg"
        android:text="Contact Name"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/contactPhoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01234567890"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/contactNameTxt"
        app:layout_constraintTop_toBottomOf="@id/contactNameTxt"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/contactPhoneTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>